<h2>ルーティンを編集</h2>
<%= form_tag("/routines/#{@routine.id}/update") do %>

  <% @routine.errors.full_messages.each do|error_message| %>
    <div class="error_message">
      <%= error_message %>
    </div>
  <% end %>
  
  <p>ルーティン名</p>
  <input name="routine_name" value="<%= @routine.name %>">
  <input type="submit" value="編集を保存">
<% end %>